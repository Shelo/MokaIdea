<resources>

    <style name="IHActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#F05050</item>
        <item name="background">@color/colorPrimary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="HoloLightIHActionBar" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/IHActionBar</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/IHActionBar</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerRepoStyle</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text_default_material_dark</item>
    </style>

    <style name="SpinnerRepoStyle" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/primary_text_default_material_light</item>
    </style>

</resources>
